{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "node backend/index.js",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "cron": {
    "maintenance-job": {
      "schedule": "0 2 * * *",
      "command": "node backend/run-railway-maintenance-direct.js"
    },
    "health-check": {
      "schedule": "0 */6 * * *",
      "command": "node backend/health-check-only.js"
    },
    "price-updates": {
      "schedule": "0 4 * * *",
      "command": "node backend/price-updates-only.js"
    },
    "quick-summary-fix": {
      "schedule": "*/2 * * * *",
      "command": "node backend/quick-summary-fix.js"
    }
  }
}
