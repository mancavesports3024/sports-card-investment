# eBay API Configuration
# For Finding API (sold items) - use your eBay App ID
EBAY_APP_ID=your_ebay_app_id_here

# Option 1: Manual token (you'll need to update this manually)
EBAY_AUTH_TOKEN=your_ebay_auth_token_here

# Option 2: Automatic token refresh (recommended)
# Get these from your eBay Developer account
EBAY_CLIENT_ID=your_ebay_client_id_here
EBAY_CLIENT_SECRET=your_ebay_client_secret_here
EBAY_REFRESH_TOKEN=your_ebay_refresh_token_here
EBAY_REDIRECT_URI=http://localhost:3001/auth/callback

# Server Configuration
PORT=3001

# Optional: eBay API Endpoint (defaults to Finding API for sold items)
EBAY_ENDPOINT=https://svcs.ebay.com/services/search/FindingService/v1

# Google Cloud Vision API Configuration (for AI image analysis)
# Option 1: Service account key file path
GOOGLE_CLOUD_KEY_FILE=path/to/your/service-account-key.json

# Option 2: Service account credentials JSON (for Railway deployment)
# Copy the entire JSON content from your service account key file
GOOGLE_CLOUD_CREDENTIALS={"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."} 