{
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "node index.js",
    "cronJobs": [
      {
        "name": "pull-new-items",
        "schedule": "0 */6 * * *",
        "command": "node fast-batch-pull-new-items.js"
      },
      {
        "name": "update-existing-prices",
        "schedule": "0 2 * * *",
        "command": "node update-prices.js"
      },
      {
        "name": "maintenance-job",
        "schedule": "0 4 * * *",
        "command": "node railway-maintenance-job-direct.js"
      },
      {
        "name": "summary-title-fix",
        "schedule": "0 5 * * *",
        "command": "node railway-summary-title-fix.js"
      },
      {
        "name": "summary-title-fix-now",
        "schedule": "*/5 * * * *",
        "command": "node run-summary-title-fix-now.js"
      }
    ]
  }
}